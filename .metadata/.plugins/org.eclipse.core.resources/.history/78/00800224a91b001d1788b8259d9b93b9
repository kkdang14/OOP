package Lession1;

import java.util.Scanner;

public class Point {
	private int x= 0, y= 1;
	
	public Point(int x, int y) {
		this.x = x;
		this.y = y;
	}
	public static Scanner sc = new Scanner(System.in);
	public void read() {
		int a, b;
		a= sc.nextInt();
		b= sc.nextInt();
		x =a;
		y =b;
	}
	public void print() {
		System.out.println("("+ x +","+ y +")");
	}
	public void move(int dx, int dy) {
		x+= dx;
		y+= dy;
	}
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	
}

